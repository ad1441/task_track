<div class="page-header">
  <h3><%= @period.name %></h3>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Name</th>
        <th>Description</th>
        <th>Actions</th>
      </tr>

      <% @period.projects.each do |project| %>
      <tr>
        <td><a href="/projects/<%= project.id %>" class="btn btn-info"><%= project.name %></td></a>
        <td><%= project.description %></td>
        <td>
          <a href="/delete_project/<%= project.id %>" class="btn btn-danger" rel="nofollow"><i class="fa fa-trash-o" aria-hidden="true"></i>
          </a>
          <a href="/projects/<%= project.id %>/edit" class="btn btn-default"><i class="fa fa-pencil-square-o" aria-hidden="true"></i>
          </a>
        </td>
      </tr>
      <% end %>

    </table>
    <div class="row">
      <div class="col-md-12">

        <div class="page-header">
          <h3>OR Add New Project</h3>
        </div>

        <div>
          <form action="/create_project" method="post">
            <!-- Hidden input for authenticity token to protect from forgery -->
            <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

            <!-- Label and input for name -->
            <div class="form-group">
              <label for="name" class="control-label">
                Name
              </label>

              <input type="text" id="name" name="name" placeholder="Name" class="form-control">
            </div>

            <!-- Label and input for description -->
            <div class="form-group">
              <label for="description" class="control-label">
                Description
              </label>

              <input type="text" id="description" name="description" placeholder="Description" class="form-control">
            </div>

            <!-- Label and input for period_id -->

            <input type="hidden" id="period_id" name="period_id" placeholder="Period" class="form-control" value="<%= @period.id %>">


            <button class="btn btn-success">
              Create Project
            </button>

          </form>
        </div>
      </div>
    </div>

  </div>

</div>

<script type="text/javascript">
$(function () {
  $('#datetimepicker1').datetimepicker();
});
</script>
