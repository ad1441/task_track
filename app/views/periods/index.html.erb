<div class="page-header">
  <h1>
    Periods
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Period Name</th>
        <th>Start date</th>
        <th>Actions</th>
      </tr>

      <% @periods.each do |period| %>
      <tr>
        <td><a href="/periods/<%= period.id %>" class="btn btn-info"><%= period.name %></td></a>
        <td><%= period.date_start %></td>
        <td>
          <a href="/delete_period/<%= period.id %>" class="btn btn-danger" rel="nofollow"><i class="fa fa-trash-o" aria-hidden="true"></i>
</a>
          <a href="/periods/<%= period.id %>/edit" class="btn btn-default"><i class="fa fa-pencil-square-o" aria-hidden="true"></i>
</a>
        </td>
      </tr>
      <% end %>
    </table>
    <div class="row">
      <div class="col-md-12">

        <div class="page-header">
          <h3>OR Add New Period</h3>
        </div>

        <div>
          <form action="/create_period" method="post">
            <!-- Hidden input for authenticity token to protect from forgery -->
            <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

            <!-- Label and input for user_id -->
          <div class="form-group">
            <input type="hidden" id="user_id" name="user_id" placeholder="User" class="form-control" value="<%= current_user %>">
          </div>

          <!-- Label and input for name -->
          <div class="form-group">
            <label for="name" class="control-label">
              Name (e.g. MBA 1st Year Fall, Case Team Leader Year)
            </label>

            <input type="text" id="name" name="name" placeholder="Name" class="form-control">
          </div>

          <!-- Label and input for date_start -->


          <label for="date_start" class="control-label">
            Start date
          </label>
            <div class='input-group date' id='datetimepicker1'>

              <input type='text' class="form-control" name="date_start" id="date_start" placeholder="Start date">
              <span class="input-group-addon">
                <span class="glyphicon glyphicon-calendar"></span>
              </span>
            </div>


          <button class="btn btn-success">
            Create Period
          </button>

        </form>
      </div>
    </div>
  </div>
</div>


<script type="text/javascript">
  $(function () {
    $('#datetimepicker1').datetimepicker();
  });
</script>
